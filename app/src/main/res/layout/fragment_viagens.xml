<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.puc.ihc.capital.fragments.ViagensFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="5dp"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:id="@+id/card1"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingTop="20dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
            android:text="Viagens agendadas"
            android:textSize="22dp"
            android:id="@+id/textView21"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignTop="@+id/card1"
            android:layout_alignParentLeft="true"
            android:entries="@array/Viagens"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:id="@+id/card2"
        card_view:contentPaddingRight="10dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingTop="5dp"
        android:layout_below="@+id/card1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Agendar nova viagem"
            android:textSize="20dp"
            android:id="@+id/textView22"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ida"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:text="Volta"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="date"
            android:id="@+id/dataDe"
            android:layout_marginLeft="60dp"
            android:focusable="false"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:layout_marginTop="75dp"
            android:id="@+id/dataAte"
            android:layout_marginLeft="60dp"
            android:focusable="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageAte"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="170dp"
            android:src="@android:drawable/ic_menu_today"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageDe"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="170dp"
            android:src="@android:drawable/ic_menu_today"
            android:layout_marginBottom="5dp" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/paises"
            android:layout_marginTop="140dp"/>


    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Agendar viagem"
        android:id="@+id/button3"
        android:layout_below="@id/card2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>



</RelativeLayout>
